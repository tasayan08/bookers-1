<% @book.errors.full_messages.each do |message| %>
 <%= message %>error<br>
<% end %>

<h1>Editing Book</h1>

<%= form_with model: @book, local:true do |f| %>

<div class='textarea'>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
 <div>
 <%= f.submit 'Update Book' %>
 </div>
</div>
<% end %>

<%= link_to 'Show', @book, class: "show_#{@book.id}" %> |
<%= link_to 'Back', books_path, class: "back" %>
